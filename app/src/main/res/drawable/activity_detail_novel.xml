<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailNovelActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/myrect">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:layout_weight="6">
                    <ImageView
                        android:id="@+id/image_poster"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/ic_launcher_background" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:id="@+id/tvJudulNovel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Judul Novel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:background="#E2F8F0"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Pengarang"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="Nama Pengarang"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:background="#E2F8F0"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Penerbit"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="Nama Penerbit"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:background="#E2F8F0"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Tahun Terbit"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="YYYY"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:background="#E2F8F0"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Genre Novel"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="Genre Novel"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:background="#CCF29B"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/baseline_remove_red_eye_24"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:textStyle="italic"
                        android:text="65k Dibaca"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/baseline_thumb_up_24"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="65k Disukai"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/baseline_comment_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="20k Ulasan"
                        android:textStyle="italic"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="Ini Sinopsis....!!"/>

                <TextView
                    android:id="@+id/tvSinopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:justificationMode="inter_word"
                    android:text="Anda memiliki bakat mentah. Atau Anda yang diunggulkan. Tapi apakah kamu punya hati? Apakah Anda memiliki apa yang diperlukan? Mari kita lihat Anda terbuat dari apa. Pertarungan sesungguhnya dimulai sekarang!"
                    android:textStyle="italic" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:text="Mulai Baca Sekarang"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>

